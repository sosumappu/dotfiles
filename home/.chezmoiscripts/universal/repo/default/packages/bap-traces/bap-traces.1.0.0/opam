license: "MIT"
build: [
  ["./configure"
                 "--prefix=%{prefix}%"
                 "--mandir=%{man}%"
                 "--enable-traces"]
  [make]
]

install: [
  [make "install"]
]

remove: [
        [ "ocamlfind" "remove" "bap-traces"]
]

depends: [
  "ocaml"
  "oasis" {build & >= "0.4.7"}
  "bap-std" {= "1.0.0"}
  "uri" {>= "1.9.0"}
  "uuidm"
]
synopsis: "BAP Library for loading and parsing execution traces"
