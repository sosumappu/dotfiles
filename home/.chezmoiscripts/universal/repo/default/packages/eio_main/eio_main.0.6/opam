depends: [
  "dune" {>= "2.9"}
  "eio_linux" {= version & os = "linux"}
  "mdx" {>= "1.10.0" & < "2.3.1" & with-test}
  "eio_luv" {= version}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
