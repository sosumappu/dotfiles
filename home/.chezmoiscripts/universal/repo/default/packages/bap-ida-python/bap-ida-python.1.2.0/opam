    ["cp" "-v" "plugins/plugin_loader_bap.py" "%{conf-ida:path}%/plugins/"]
    ["cp" "-rv" "plugins/bap" "%{conf-ida:path}%/plugins/bap"]
    ["cp" "-v" "bap.cfg" "%{conf-ida:path}%/cfg/"]
]
