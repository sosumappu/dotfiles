    ["rm" "-f" "%{conf-ida:path}%/plugins/plugin_loader_bap.py"]
    ["rm" "-rf" "%{conf-ida:path}%/plugins/bap/"]
    ["rm" "-f" "%{conf-ida:path}%/cfg/bap.cfg"]
]
