opam-version: "2.0"
build: [
  [     "./configure"
    "--prefix"
    "%{prefix}%"
    "--with-ocamldir=%{prefix}%/lib"
    "--with-metadir=%{prefix}%/lib"
  ]
  [ make ]
]
install: [
  [ make "install" ]
]
depends: [
  "ocaml" {>= "3.12.1"}
  "ocamlfind"
  "ocp-build" {>= "1.99.17-beta" & < "1.99.21" }
  "conf-zlib"
]
