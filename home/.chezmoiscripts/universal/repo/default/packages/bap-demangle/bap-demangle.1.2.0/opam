build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-demangle"]
  [make]
]

install: [[make "install"]]

remove: [
        ["ocamlfind" "remove" "bap-demangle"]
        ["ocamlfind" "remove" "bap-plugin-demangle"]
        ["bapbundle"   "remove" "demangle.plugin"]
        ]

depends: [
  "ocaml"
  "core_kernel" {>= "113.24.00" & < "v0.9"}
  "oasis" {build & = "0.4.7"}
  "bap-std" {= "1.2.0"}
  "cmdliner"
]
