  "ocaml" {>= "4.02.3" & < "4.05.0"}
  "camlp5"
  "coq" {= "8.7.0"}
  "lablgtk"
  "conf-gtksourceview"
]
install: [
  make
  "install-ide-bin"
  "install-ide-files"
  "install-ide-info"
  "install-ide-devfiles"
]
